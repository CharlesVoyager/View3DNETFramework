<UserControl x:Class="View3D.view.wpf.UI_object_information"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View3D.view.wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Window_Loaded">
    <Grid>

        <StackPanel Orientation="Vertical">

            <Grid Height="90" Width="310" Margin="0,120,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Rectangle Name="rectangle0" Grid.ColumnSpan="5" Grid.RowSpan="5" Fill="#C8F7931E" />
                <Label Content="Filename:" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="14"/>
                <Label Content="Collision:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="14"/>
                <Label Content="Volume:" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="14"/>

                <TextBox Name="txtFilename" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Text="???.stl" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial" FontSize="14"/>
                <TextBox Name="txtCollision" Grid.Row="1" Grid.Column="1" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="54" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial" FontSize="14"/>
                <TextBox Name="txtVolume" Grid.Row="1" Grid.Column="3" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center" Width="54" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial" FontSize="14"/>


            </Grid>

            <Grid Height="90" Width="310" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>                
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>


                <Rectangle Name="rectangle1" Grid.ColumnSpan="5" Grid.RowSpan="5" Fill="#C8F7931E" />

                <Label Content="Dimension:" Grid.Row="0" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />
                <Label Content="Position:" Grid.Row="1" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />
                <Label Content="Size:" Grid.Row="2" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />

                <Label Content="X" Grid.Column="1" Grid.Row="0" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />
                <Label Content="Y" Grid.Column="2" Grid.Row="0" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />
                <Label Content="Z" Grid.Column="3" Grid.Row="0" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" />

                <TextBox Name="txtPosX" Grid.Column="1" Grid.Row="1" Text="100" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>
                <TextBox Name="txtPosY" Grid.Column="2" Grid.Row="1" Text="100" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>
                <TextBox Name="txtPosZ" Grid.Column="3" Grid.Row="1" Text="100" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>

                <TextBox Name="txtSizeX" Grid.Column="1" Grid.Row="2" Text="10 mm" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>
                <TextBox Name="txtSizeY" Grid.Column="2" Grid.Row="2" Text="10 mm" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>
                <TextBox Name="txtSizeZ" Grid.Column="3" Grid.Row="2" Text="10 mm" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="53" Opacity="0.8" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" TextAlignment="Right" FontFamily="Arial"/>

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
